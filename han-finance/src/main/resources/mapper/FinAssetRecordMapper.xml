<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dupake.finance.mapper.FinAssetRecordMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.dupake.finance.domain.FinAssetRecord">
        <id column="id" property="id" />
        <result column="account_code" property="accountCode" />
        <result column="subject_code" property="subjectCode" />
        <result column="receive_amount" property="receiveAmount" />
        <result column="pay_amount" property="payAmount" />
        <result column="real_receive_amount" property="realReceiveAmount" />
        <result column="real_pay_amount" property="realPayAmount" />
        <result column="amount" property="amount" />
        <result column="balance_before" property="balanceBefore" />
        <result column="balance_after" property="balanceAfter" />
        <result column="type" property="type" />
        <result column="create_id" property="createId" />
        <result column="create_time" property="createTime" />
        <result column="update_id" property="updateId" />
        <result column="update_time" property="updateTime" />
        <result column="is_deleted" property="isDeleted" />
        <result column="remark" property="remark" />
        <result column="asset_date" property="assetDate" />
    </resultMap>




    <select id="selectListPage" resultMap="BaseResultMap">
        select * from fin_asset_record where
        id >= (
        select id from fin_asset_record
        <where>
            is_deleted = 0   and create_time between #{startTime} and #{endTime}
            <if test="accountCode != null and accountCode != ''">
                and  account_code = #{accountCode}
            </if>
        </where>
        order by id limit #{pageNumber} , 1
        )
        <if test="accountCode != null and accountCode != ''">
            and  account_code = #{accountCode}
        </if>
        and is_deleted = 0   and create_time between #{startTime} and #{endTime}
        limit #{size}
    </select>
    <select id="getTotalCount" resultType="int">
        select count(1) from fin_asset_record
        <where>
            is_deleted = 0   and create_time between #{startTime} and #{endTime}
            <if test="accountCode != null and accountCode != ''">
                and  account_code = #{accountCode}
            </if>
        </where>
    </select>


    <update id="updateBatch" parameterType="java.util.List" >
        update fin_asset_record
        <trim prefix="set" suffixOverrides=",">
            <trim prefix="is_deleted =case" suffix="end,">
                <foreach collection="list" item="i" index="index">
                    <if test="i.isDeleted!=null">
                        when id=#{i.id} then #{i.isDeleted}
                    </if>
                </foreach>
            </trim>
            <trim prefix="update_time =case" suffix="end,">
                <foreach collection="list" item="i" index="index">
                    <if test="i.updateTime!=null">
                        when id=#{i.id} then #{i.updateTime}
                    </if>
                </foreach>
            </trim>
        </trim>
        where
        <foreach collection="list" separator="or" item="i" index="index" >
            id=#{i.id}
        </foreach>
    </update>


</mapper>
